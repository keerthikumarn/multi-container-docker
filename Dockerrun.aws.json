{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "nkeerthikumar/multi-client",
            "host": "client",
            "essential": false,
            "memory": 128
        },
        {
            "name": "server",
            "image": "nkeerthikumar/multi-server",
            "host": "api",
            "essential": false,
            "memory": 128
        },
        {
            "name": "worker",
            "image": "nkeerthikumar/multi-worker",
            "host": "worker",
            "essential": false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "nkeerthikumar/multi-worker",
            "host": "nginx",
            "essential": true,
            "memory": 128,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"]
        }

    ] 
}